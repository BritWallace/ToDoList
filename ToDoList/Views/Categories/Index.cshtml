@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

<div class="categoryItems">
  @foreach(Category category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
  }
</div>

<div class="test-color">
  <p>@Html.ActionLink("Add new category", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>