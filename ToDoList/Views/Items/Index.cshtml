using System.Linq;

@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;
<body>
<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Item item in Model)
{
  <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }, new {id = "linkColor"})</li>
  <p>Due: @Html.DisplayName($"{item.DueDate}")</p>
}
<div class="test-color">
  <p> Test Div </p>
  <p>@Html.ActionLink("Add new item", "Create")</p>
</div>
</body>


